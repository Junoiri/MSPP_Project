<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_user">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="10dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/name_edit_text"
            android:textColorHint="@color/gray"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintWidth_percent="0.9" />

        <EditText
            android:id="@+id/surname_edit_text"
            android:textColorHint="@color/gray"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_edit_text"
            app:layout_constraintWidth_percent="0.9" />

        <EditText
            android:id="@+id/email_edit_text"
            android:textColorHint="@color/gray"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surname_edit_text"
            app:layout_constraintWidth_percent="0.9" />

        <EditText
            android:id="@+id/dob_edit_text"
            android:textColorHint="@color/gray"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Date of Birth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_edit_text"
            app:layout_constraintWidth_percent="0.9" />

        <EditText
            android:id="@+id/id_number_edit_text"
            android:textColorHint="@color/gray"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ID Number (PESEL)"
            android:inputType="number"
            android:maxLength="11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dob_edit_text"
            app:layout_constraintWidth_percent="0.9" />

        <Button
            android:id="@+id/save_button"
            style="@style/BlueButton"
            android:background="@drawable/button_shape_y"
            android:textColor="@color/defaultBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Save Changes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_number_edit_text"
            app:layout_constraintWidth_percent="0.9" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
